<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddNewRaceServlet</servlet-name>
        <servlet-class>Servlets.AddNewRaceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRaceServlet</servlet-name>
        <servlet-class>Servlets.additionServlets.AddRaceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewRuleSet</servlet-name>
        <servlet-class>Servlets.AddNewRuleSet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRuleSet</servlet-name>
        <servlet-class>Servlets.additionServlets.AddRuleSet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewSkillServlet</servlet-name>
        <servlet-class>Servlets.AddNewSkillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSkillServlet</servlet-name>
        <servlet-class>Servlets.additionServlets.AddSkillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCharServlet</servlet-name>
        <servlet-class>Servlets.CharacterCreation.CreateCharServlet</servlet-class>
    </servlet>
