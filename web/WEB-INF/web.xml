        <servlet-name>SetNameServlet</servlet-name>
        <servlet-class>Servlets.CharacterCreation.SetNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetRaceServlet</servlet-name>
        <servlet-class>Servlets.CharacterCreation.SetRaceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewClassSkillServlet</servlet-name>
        <servlet-class>Servlets.AddNewClassSkillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewClassServlet</servlet-name>
        <servlet-class>Servlets.AddNewClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClassServlet</servlet-name>
        <servlet-class>Servlets.additionServlets.AddClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClassSkillServlet</servlet-name>
        <servlet-class>Servlets.additionServlets.AddClassSkillServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewRaceServlet</servlet-name>
        <url-pattern>/AddNewRace</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRaceServlet</servlet-name>
        <url-pattern>/AddRace</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewRuleSet</servlet-name>
        <url-pattern>/AddNewRuleSet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRuleSet</servlet-name>
        <url-pattern>/AddRuleSet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewSkillServlet</servlet-name>
        <url-pattern>/AddNewSkill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSkillServlet</servlet-name>
        <url-pattern>/AddSkill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCharServlet</servlet-name>
        <url-pattern>/CreateChar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetNameServlet</servlet-name>
        <url-pattern>/SetName</url-pattern>
